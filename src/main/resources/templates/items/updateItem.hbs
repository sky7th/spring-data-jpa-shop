{{>layout/header}}
<body>
<div class="wrapper">
    {{>layout/body-header}}
    <div class="m-category">
    </div>
    <main>
        <div class="main-section">
            <div class="container">
                <div class="main-section-data">
                    <div class="row">
                        {{>layout/body-left}}
                        <div class="col-lg-6">
                            <div class="main-ws-sec">
                                <div class="posts-section" id="posts-section">
                                    {{#item}}
                                        <form id="itemForm" role="form" method="post" action="/items/{{id}}">
<!--                                            <input type="hidden" name="_method" value="PUT"/>-->
<!--                                            <input type="hidden" name="itemId" value="{{id}}"/>-->
                                            <div class="form-group">
                                                <label for="name">상품명</label>
                                                <input type="text" name="name" class="form-control" id="name" placeholder="이름을 입력하세요" value="{{name}}">
                                            </div>
                                            <div class="form-group">
                                                <label for="price">가격</label>
                                                <input type="number" name="price" class="form-control" id="price" placeholder="가격을 입력하세요" value="{{price}}">
                                            </div>
                                            <div class="form-group">
                                                <label for="stockQuantity">수량</label>
                                                <input type="number" name="stockQuantity" class="form-control" id="stockQuantity" placeholder="수량을 입력하세요" value="{{stockQuantity}}">
                                            </div>
                                            {{#artist}}
                                                <div class="album item-extra">
                                                    <div>
                                                        <label for="artist">가수명</label>
                                                        <input type="text" name="artist" class="form-control" id="artist" placeholder="저자를 입력하세요" value="{{artist}}">
                                                    </div>
                                                    <div>
                                                        <label for="etc">소속사</label>
                                                        <input type="text" name="etc" class="form-control" id="etc" placeholder="ISBN을 입력하세요" value="{{etc}}">
                                                    </div>
                                                </div>
                                            {{/artist}}

                                            {{#author}}
                                                <div class="book item-extra">
                                                    <div>
                                                        <label for="author">저자</label>
                                                        <input type="text" name="author" class="form-control" id="author" placeholder="저자를 입력하세요" value="{{author}}">
                                                    </div>
                                                    <div>
                                                        <label for="isbn">ISBN</label>
                                                        <input type="text" name="isbn" class="form-control" id="isbn" placeholder="ISBN을 입력하세요" value="{{isbn}}">
                                                    </div>
                                                </div>
                                            {{/author}}

                                            {{#director}}
                                                <div class="movie item-extra">
                                                    <div>
                                                        <label for="director">감독</label>
                                                        <input type="text" name="director" class="form-control" id="director" placeholder="저자를 입력하세요" value="{{director}}">
                                                    </div>
                                                    <div>
                                                        <label for="actor">배우</label>
                                                        <input type="text" name="actor" class="form-control" id="actor" placeholder="ISBN을 입력하세요" value="{{actor}}">
                                                    </div>
                                                </div>
                                            {{/director}}
                                            <button type="submit" class="btn btn-default">Submit</button>
                                        </form>
                                    {{/item}}
                                </div>
                            </div>
                        </div>
                        {{>layout/body-right}}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

